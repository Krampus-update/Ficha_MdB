<?xml version="1.0" encoding="UTF-8"?>
<form name="frmFichaRPGmeister9_svg" align="client" theme="dark" margins="{top=1}">
	<scrollBox align="client">
		<template name="Descricao">
			<label left="$(left1)" top="$(top)" width="90" height="20" text="$(text)" horzTextAlign="center"/>
			<edit left="$(left2)" top="$(top)" width="200" height="25" field="$(field)" vertTextAlign="center" />
		</template>
		
		<layout left="0" top="0" width="1205" height="105" frameStyle="frames/panel5/frame.xml">
			<label left="10" top="10" width="90" height="20" text="TAMANHO" horzTextAlign="center"/>
			<comboBox left="100" top="10" width="100" field="caracteristicas.tamanho" fontColor="white" items="{'Minúsculo', 'Diminuto', 'Miúdo', 'Pequeno', 'Médio', 'Grande', 'Enorme', 'Imenso', 'Colossal'}" values="{'-4','-3','-2','-1','0','1','2','3','4'}" horzTextAlign="center"/>
			<checkBox left="200" top="10" width="100" field="caracteristicas.quadrupede" text="Quadrúpede" />
			<Descricao left1="10" left2="100" top="38" text="ALTURA" field="caracteristicas.altura"/>
			<Descricao left1="10" left2="100" top="65" text="PESO" field="caracteristicas.peso"/>
			
			<Descricao left1="310" left2="410" top="10" text="IDADE" field="caracteristicas.idade"/>
			<Descricao left1="310" left2="410" top="38" text="SEXO" field="caracteristicas.sexo"/>
			<Descricao left1="310" left2="410" top="65" text="OUTROS" field="caracteristicas.aparenciaOutros"/>
			
			<Descricao left1="610" left2="700" top="10" text="OLHOS" field="caracteristicas.aparenciaOlhos"/>
			<Descricao left1="610" left2="700" top="38" text="PELE" field="caracteristicas.pele"/>
			<Descricao left1="610" left2="700" top="65" text="CABELO" field="caracteristicas.cabelo"/>
			
			<Descricao left1="900" left2="980" top="10" text="PLANO" field="caracteristicas.plano"/>
			<Descricao left1="900" left2="980" top="38" text="REGIÃO" field="caracteristicas.regiao"/>
			<Descricao left1="900" left2="980" top="65" text="REINO" field="caracteristicas.reino"/>
		</layout >
		
		<flowPart left="0" top="110" width="375" height="240" frameStyle="frames/panel5/frame.xml" margins="{left = 0, right = 4}">
			<image align="client" style="proportional" field="imagens.aparencia" class="transparente" margins="{top=2}" editable="true" animate="true"/>
			<label align="bottom" autoSize="true" text="APARENCIA" vertTextAlign="center" horzTextAlign="center" fontStyle="bold"/>
		</flowPart>

		<layout left="0" top="355" width="375" height="250" frameStyle="frames/panel5/frame.xml" margins="{left = 4, right = 4}">
			<label align="top" autoSize="true" vertTextAlign="center" horzTextAlign="center" fontStyle="bold" text="TRAÇOS"/>
			<textEditor left="10" top="25" width="355" height="220" field="caracteristicas.caracteristicasETracoes"/>
		</layout>

		<layout left="380" top="110" width="825" height="495" frameStyle="frames/panel5/frame.xml">
			<label align="bottom" autoSize="true" vertTextAlign="center" horzTextAlign="center" fontStyle="bold" text="HISTORIA"/>
			<richEdit left="10" top="20" width="805" height="455" field="background" backgroundColor="#333333" defaultFontSize="12" defaultFontColor="white"/>
		</layout>

	<!-- TERCEIRA LINHA -->		
	<flowLayout class="oneLineTile2" autoHeight="true" minScaledWidth="290" horzAlign="center" lineSpacing="10" margins="{top=5}">
			<!-- ALIADOS E ORGANIZAÇÕES -->					
				<flowLayout name="fraAliadosOrganizacoes" class="tile" autoHeight="true" frameStyle="frames/panel5/frame.xml" margins="{left = 4, right = 4}" horzAlign="center">
					<event name="onBeforeLayoutCalc">
						<![CDATA[
								if self.fraAliadosOrganizacoes:getWidth() <= 500 then
									self.prtAliados:setHeight(200);
									self.prtFaccao:setHeight(200);									
								else
									self.prtAliados:setHeight(420);
									self.prtFaccao:setHeight(350);
								end;
						]]>
					</event>				
				
					<flowPart name="prtAliados" minWidth="300" maxWidth="1600" minScaledWidth="290" height="420" avoidScale="true">
						<textEditor align="client" field="aliados.aliadosEOrganizacoes" class="transparente" margins="{top=2, left=4, right=4}" fontSize="16"/>
					</flowPart>	
					
					<flowPart name ="prtFaccao" class="halfTile" stepSizes="{260, 310}" maxScaledWidth="310" avoidScale="true" height="350" frameStyle="frames/panel4transp/frame.xml" margins="{left=4, right=4, bottom=4, top=4}">
						<label align="top" horzTextAlign="leading" text="FACÇÂO" fontSize="11" fontColor="gray" margins="{left=4, right=4}"/>
						<edit align="top" field="ALIADOS" margins="{left=4, right=4}"/>
						<image align="client" field="SIMBOLO" editable="true" style="autoFit" margins="{left=4, right=4}"/>
						<label align="bottom" autoSize="true" text="SIMBOLO DA FACÇÂO" fontSize="12" vertTextAlign="center" horzTextAlign="center" fontStyle="bold"/>
					</flowPart>
					<flowLineBreak/>
					
					<flowPart minWidth="200" maxWidth="1800" height="16">
						<label align="client" autoSize="true" text="@@DnD5e.features.alliesOrganizations" fontSize="12" vertTextAlign="center" horzTextAlign="center" fontStyle="bold"/>
					</flowPart>
				</flowLayout>		

	</scrollBox>
</form>