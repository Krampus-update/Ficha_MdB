<?xml version="1.0" encoding="UTF-8"?>
<form dataType="MultiVerso_MdBe" formType="sheetTemplate" title="Ficha Mesa do Bolo" name="frmMdB" theme="dark">
	<import file="styles.xml"/>
	<import file="templates.xml"/>

	<script>require('mudaNick.lua')</script>
	<dataLink field="nome"><event name="onChange"> mudaNick(sheet.nome,sheet); </event></dataLink>

	<tabControl align="client" name="pgcPrincipal">

			<tab title="FRENTE">
				<import file="1_frente.xml"/>
			</tab>

			<tab title="CARACTERISTICAS">
				<import file="2_caracteristicas.xml"/>
			</tab>

			<tab title="EQUIPAMENTOS">
				<import file="3_equipamento2.xml"/>
			</tab>

		<tab title="MAGIA">
			<import file="4_magias2.xml"/>
		</tab>

		<tab title="CONTADORES">
			<import file="5_contadores.xml"/>
		</tab>

		<tab title="PROPRIEDADES">
			<import file="6_propriedades.xml"/>
		</tab>

		<tab title="DIARIO">
			<rectangle class="fundo" align="client" strokeColor="white" strokeSize="1">
					<textEditor name="historiaFancy" align="client" field="historia.texto2" class="transparente" margins="{top=2}" fontSize="16" visible="true"/>
			</rectangle>
		</tab>

		<tab title="CALENDARIO">
			<import file="8_calendario.lfm"/>
		</tab>

		<tab title="COMPANHEIRO">
			<import file="10_companion.xml"/>
		</tab>

		<tab title="C.ANOTAÇÕES">
			<rectangle class="fundo" align="client" strokeColor="white" strokeSize="1">
				<textEditor name="companionanotacoesFancy" align="client" field="companion.anotacoes2" class="transparente"  margins="{left=2, right=2, top=2, bottom=2}" visible="true"/>
			</rectangle>
		</tab>

		<tab title="ANOTAÇÕES">
			<rectangle class="fundo" align="client" strokeColor="white" strokeSize="1">
				<textEditor name="anotacoesFancy" align="client" field="outros.anotacoes2" class="transparente"  margins="{left=2, right=2, top=2, bottom=2}" visible="true"/>
			</rectangle>
		</tab>

		<tab title="CREDITOS">
			<import file="13_creditos.xml"/>
		</tab>

	</tabControl>
</form>
